<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:id="@+id/mainPageFragment">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"

        android:text="Numbers!"
        android:textColor="@color/white"
        android:textSize="64sp"
        android:fontFamily="@font/righteous"
        android:rotation="15"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/triviaFactButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Trivia facts"
        android:textSize="32sp"
        android:textAllCaps="false"
        android:background="@drawable/buttons_background"

        app:layout_constraintStart_toStartOf="@id/header_title"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@id/header_title"/>

    <Button
        android:id="@+id/mathFactButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Math facts"
        android:textSize="32sp"
        android:textAllCaps="false"
        android:background="@drawable/buttons_background"

        app:layout_constraintStart_toStartOf="@id/triviaFactButton"
        app:layout_constraintTop_toBottomOf="@id/triviaFactButton"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@id/triviaFactButton"/>

    <Button
        android:id="@+id/dateFactButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Date facts"
        android:textSize="32sp"
        android:textAllCaps="false"
        android:background="@drawable/buttons_background"

        app:layout_constraintStart_toStartOf="@id/mathFactButton"
        app:layout_constraintTop_toBottomOf="@id/mathFactButton"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@id/mathFactButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>